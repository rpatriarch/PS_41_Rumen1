<Window x:Class="UI.RandomTextWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Random Text Window" Height="300" Width="400">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Random Text:" FontSize="20" FontWeight="Bold" Margin="0 0 0 10" />
            <TextBox x:Name="txtRandomText" Width="200" Height="100" HorizontalAlignment="Center" VerticalAlignment="Center" IsReadOnly="True" />
        </StackPanel>
    </Grid>
</Window>
